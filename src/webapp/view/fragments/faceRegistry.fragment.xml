<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Dialog 
        id="diagFaceRegistry" 
        icon="sap-icon://action-settings" 
        contentHeight="75%"
        contentWidth="30%"
        title="Registration">

        <form:SimpleForm editable="true" layout="ResponsiveGridLayout">
            <form:content>
                <Input id="ipName" placeholder="your name"/>
                <Input id="ipSurname" placeholder="your surname"/>
            </form:content>
        </form:SimpleForm>

        <beginButton>
            <Button text="Ok" press="onCloseDialog"></Button>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelDialog"></Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>